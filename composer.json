{
    "name": "dcodegroup/activity-log",
    "description": "Simple package which dcode uses to manage activity logs",
    "license": "MIT",
    "keywords": [
        "laravel",
        "activity logs",
        "communication logs",
        "data"
    ],
    "authors": [
        {
            "name": "Thanh Nguyen",
            "email": "thanh@dcodegroup.com",
            "role": "Developer"
        },
        {
            "name": "Nathan Rzepecki",
            "email": "nathan@lionslair.net.au",
            "homepage": "https://www.lionslair.net.au"
        },
        {
            "name": "Dcode Group",
            "email": "forge@dcodegroup.com",
            "homepage": "https://dcodegroup.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^10.0 || ^11.0",
        "nesbot/carbon": "^2.72",
        "spatie/laravel-query-builder": "^4.0.4 || ^5.7"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.42",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^8.21",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Dcodegroup\\ActivityLog\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dcodegroup\\ActivityLog\\ActivityLogServiceProvider"
            ]
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint",
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ]
    }
}
